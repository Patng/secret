<%= simple_form_for(@community, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :description %>
  <%= f.input :category, collection: ["School", "Organization", "Company", "Place", "Society", "Interest"] %>
  <%= f.input :location, collection: ["Hong Kong"] %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>
