<div class="box">
	<% if post.image.present? %> 
		<%= link_to (image_tag post.image(:medium)), post %>
	<% else %>
	<% end %>
	<p class="description">
		<%= link_to post.description, post %>
	</p>
	<%= link_to 'Share on Facebook', 'http://www.facebook.com/sharer.php?u='+post_url(post).to_s, :target => :blank %>
	<div id="actions">
		<p class="alignleft">
			<%= link_to '@ ' + post.community.description, post.community, :class => 'btn' %>
		</p>
		<p class="alignright">
			<% if current_user != post.user %>
			<%= link_to '<i class="icon-envelope icon-purple"></i> '.html_safe, message_post_path(post), :class => 'btn' %>
			<% end %>
			<%= link_to '<i class="icon-heart icon-pink"></i> '.html_safe + post.upvotes.size.to_s, votefor_post_path(post), :method => :post, :class => 'btn' %>
			<%= link_to '<i class="icon-comment icon-blue"></i> '.html_safe + post.comments.size.to_s, post, :class => 'btn' %>

		</p>
	</div>
</div>